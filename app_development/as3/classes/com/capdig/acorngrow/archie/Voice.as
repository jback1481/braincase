package com.capdig.acorngrow.archie{    import flash.events.*;    import com.capdig.loader.AudioLoader;        public class Voice extends AudioLoader    {        public static const LOADING_COMPLETE:String = 'sound loaded';        private var archie_snd:AudioLoader;        private var isTalking:Boolean;                // Constructor        public function Voice ()        {            // Init the AudioLoader            archie_snd = new AudioLoader();        }                public function _load (audioPath:String):void        {            archie_snd._loadAudio(audioPath, false);            archie_snd.addEventListener(Event.COMPLETE, _loadComplete);        }                        private function _loadComplete (e:Event):void        {            dispatchEvent (new Event(Voice.LOADING_COMPLETE));        }                public function get _archie_snd ():Object        {            return archie_snd;        }    }}